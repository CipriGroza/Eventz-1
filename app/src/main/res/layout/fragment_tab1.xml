<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab1"
    android:background="@color/blacky">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/imageEvent1"
            android:layout_width="400dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/event1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/btnEvent1"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="135dp"
            android:background="@color/blacky"
            android:textColor="@color/white"
            android:text="Event 1" />


        <ImageButton
            android:id="@+id/imageEvent2"
            android:layout_width="400dp"
            android:layout_height="130dp"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/event2"/>

        <Button
            android:id="@+id/btnEvent2"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="315dp"
            android:background="@color/blacky"
            android:textColor="@color/white"
            android:text="Event 2" />

        <ImageButton
            android:id="@+id/imageEvent3"
            android:layout_width="400dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="360dp"
            android:background="@drawable/event3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <Button
            android:id="@+id/btnEvent3"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="495dp"
            android:background="@color/blacky"
            android:textColor="@color/white"
            android:text="Event 3" />

        <ImageButton
            android:id="@+id/imageEvent4"
            android:layout_width="400dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="540dp"
            android:background="@drawable/event4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <Button
            android:id="@+id/btnEvent4"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="675dp"
            android:layout_marginBottom="10dp"
            android:background="@color/blacky"
            android:textColor="@color/white"
            android:text="Event 4" />
    </RelativeLayout>
    </ScrollView>

</FrameLayout>